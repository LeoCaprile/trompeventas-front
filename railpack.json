{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "pnpm": "10"
  },
  "steps": {
    "install": {
      "commands": ["pnpm install --frozen-lockfile"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["pnpm run build"]
    }
  },
  "deploy": {
    "startCommand": "pnpm start"
  }
}
